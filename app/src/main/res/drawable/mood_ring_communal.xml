<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thickness="12dp"
            android:useLevel="false">
            <solid android:color="@color/mood_ring_progress_bg" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thickness="12dp"
                android:useLevel="true">
                <gradient
                    android:startColor="@color/communal_start"
                    android:endColor="@color/communal_end"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>