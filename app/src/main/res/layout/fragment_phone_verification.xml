<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.primer.PhoneVerificationFragment">

    <ImageView
        android:id="@+id/phone_img"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_shield"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/phone_number"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme_regular"
        android:text="@string/phone_verification"
        android:textSize="@dimen/_24ssp"
        app:layout_constraintStart_toStartOf="@+id/phone_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_img"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/mobile_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/very_light_grey"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/otp_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal"
        android:weightSum="1.2"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/first_digit_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/acme_regular"
            android:textSize="@dimen/_20ssp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/second_digit_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:inputType="number"
            android:backgroundTint="@color/black"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/acme_regular"
            android:textSize="@dimen/_20ssp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/third_digit_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:inputType="number"
            android:backgroundTint="@color/black"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/acme_regular"
            android:textSize="@dimen/_20ssp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/fourth_digit_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/acme_regular"
            android:textSize="@dimen/_20ssp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/fifth_digit_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/acme_regular"
            android:textSize="@dimen/_20ssp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/sixth_digit_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/acme_regular"
            android:textSize="@dimen/_20ssp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

    </LinearLayout>

    <TextView
        android:id="@+id/edit_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="@string/phonce_edit"
        android:textColor="@color/mild_sky"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/mobile_no_tv"
        app:layout_constraintStart_toEndOf="@+id/mobile_no_tv"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />



    <TextView
        android:id="@+id/number_alert_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme_regular"
        android:textColor="@color/mild_blue"
        android:text="@string/phone_no_code"
        android:textSize="@dimen/_12ssp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_img"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:background="@drawable/btn_selector"
        app:layout_constraintBottom_toBottomOf="@+id/number_alert_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/number_alert_tv"
        app:tint="@color/black"
        android:contentDescription="@string/phone_verification"
        android:layout_marginEnd="@dimen/_20sdp"/>

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>