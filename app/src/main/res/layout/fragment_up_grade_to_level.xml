<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    tools:context=".ui.catalog.UpGradeToLevelFragment">

    <TextView
        android:id="@+id/tvm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/acme_regular"
        android:text="@string/app_name"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/homebtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/acme_regular"
        android:text="@string/congratulations"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/subHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/levelInvitationSubHeading" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/levelInvitationQuestionHeading"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_gravity="top"
                    />

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/levelInvitationQ1"
                    android:fontFamily="@font/inter_normal"
                    android:paddingStart="@dimen/_5sdp"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/edtQuestion1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:overScrollMode="always"
               android:scrollbarAlwaysDrawHorizontalTrack="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_gravity="top"
                    />

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"

                    android:text="@string/levelInvitationQ2"
                    android:fontFamily="@font/inter_normal"
                    android:paddingStart="@dimen/_5sdp"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/edtQuestion2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                android:scrollbarAlwaysDrawHorizontalTrack="true"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_gravity="top"
                    />

                <TextView
                    android:id="@+id/question3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/levelInvitationQ3"
                    android:fontFamily="@font/inter_normal"
                    android:paddingStart="@dimen/_5sdp"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/edtQuestion3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                android:scrollbarAlwaysDrawHorizontalTrack="true" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextStep_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="@string/nextStep"
        android:fontFamily="@font/inter_normal"
        android:textAllCaps="false"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/btn_round_corner_bg"/>


</LinearLayout>

</androidx.core.widget.NestedScrollView>