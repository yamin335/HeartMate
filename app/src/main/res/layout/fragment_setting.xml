<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".ui.dashboard.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp">

        <include
            android:id="@+id/top_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/app_top_bar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/setting_phone_email"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/light_silver"
            android:fontFamily="@font/inter_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/phone_no_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            tools:text="+1 5555551234"
            android:background="@drawable/tv_selector_bg"
            android:gravity="center_vertical"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:text="user@gmail.com"
            android:background="@drawable/tv_selector_bg"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/setting_notification_title"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/light_silver"
            android:fontFamily="@font/inter_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/notification_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_push_notification"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/push_email_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_emails"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/setting_membership"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/light_silver"
            android:fontFamily="@font/inter_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/upgrade_membership_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_upgrade_membership"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/setting_legal"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/light_silver"
            android:fontFamily="@font/inter_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/privacy_policy_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_privacy_policy"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/terms_service_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_terms_service"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/license_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_licenses"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/setting_community"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/light_silver"
            android:fontFamily="@font/inter_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/safe_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_safe_tips"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/membership_principle_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_membership_principle"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tv_selector_bg"
            android:textSize="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/logout_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_logout"
            android:textSize="@dimen/_14ssp"
            android:gravity="center"
            android:background="@drawable/tv_selector_bg"
            android:textColor="@color/light_silver"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/delete_account_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/setting_delete_account"
            android:textSize="@dimen/_14ssp"
            android:background="@drawable/tv_selector_bg"
            android:gravity="center"
            android:textColor="@color/light_silver"
            android:fontFamily="@font/inter_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/_40sdp"/>

    </LinearLayout>

</ScrollView>