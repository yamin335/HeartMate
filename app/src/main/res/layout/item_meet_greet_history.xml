<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_5sdp">

    <TextView
        android:id="@+id/testimonial_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/textPurple"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="June 15" />

    <TextView
        android:id="@+id/experience_type_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/light_blue_i"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/testimonial_date_tv"
        app:layout_constraintTop_toTopOf="@+id/testimonial_date_tv"
        tools:text="Experience Type" />

    <TextView
        android:id="@+id/partner_testimonial_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_14ssp"
        android:background="@color/gray"
        android:fontFamily="@font/inter_normal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/_35sdp"
        android:clickable="true"
        android:paddingStart="@dimen/_13sdp"
        android:textColor="@color/light_purple"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="@+id/experience_type_tv"
        app:layout_constraintStart_toEndOf="@+id/testimonial_date_tv"
        app:layout_constraintTop_toBottomOf="@+id/experience_type_tv" />

    <TextView
        android:id="@+id/my_testimonial_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_14ssp"
        android:background="@color/gray"
        android:fontFamily="@font/inter_normal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/_35sdp"
        android:paddingStart="@dimen/_13sdp"
        android:textColor="@color/light_purple"
        android:textSize="@dimen/_12ssp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/experience_type_tv"
        app:layout_constraintStart_toEndOf="@+id/testimonial_date_tv"
        app:layout_constraintTop_toBottomOf="@+id/partner_testimonial_tv" />


    <ImageView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/dotted_line"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>